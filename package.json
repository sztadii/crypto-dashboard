{
  "name": "crypto-dashboard",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run test-unit && npm run test-e2e",
    "test-unit": "CI=true react-scripts test --silent",
    "test-e2e": "start-server-and-test start http://localhost:3000 test-cypress",
    "test-cypress": "cypress run --config-file cypress/cypress.json",
    "lint": "npm run lint-scripts && npm run lint-files-names && npm run lint-format",
    "lint-scripts": "eslint \"./**/*.{ts,tsx}\" --max-warnings 0 --ignore-path .gitignore",
    "lint-files-names": "file-naming-enforcer type=kebabCase ignore=[README,public,build,videos,setupTests]",
    "lint-format": "prettier --ignore-path .gitignore --check \"**/*.{ts,tsx,js,json,scss}\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,js,json,scss}\""
  },
  "dependencies": {
    "axios": "^0.25.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.12",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.21",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "bundlesize": "^0.18.1",
    "cypress": "^9.3.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "file-naming-enforcer": "^1.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "react-scripts": "5.0.0",
    "sass": "^1.49.0",
    "start-server-and-test": "^1.14.0",
    "testdouble": "^3.16.4",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended"
    ],
    "rules": {
      "max-lines": [
        "error",
        300
      ],
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,scss}": [
      "prettier --write --"
    ]
  },
  "bundlesize": [
    {
      "path": "./build/index.html",
      "maxSize": "2 kb"
    },
    {
      "path": "./build/**/*.js",
      "maxSize": "200 kB"
    },
    {
      "path": "./build/**/*.css",
      "maxSize": "20 kB"
    }
  ],
  "engines": {
    "node": "14.17.1"
  }
}
