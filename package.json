{
  "name": "crypto-dashboard",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test-unit": "CI=true react-scripts test --silent",
    "test-e2e": "start-server-and-test start http://localhost:3000 test-cypress",
    "test-cypress": "cypress run --config-file cypress/cypress.json",
    "lint": "npm run lint-scripts && npm run lint-files",
    "lint-scripts": "eslint \"./**/*.{ts,tsx}\" --max-warnings 0 --ignore-path .gitignore",
    "lint-files": "file-naming-enforcer type=kebabCase ignore=[README,public,build,setupTests]",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,js,json,css}\""
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.21",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "cypress": "^9.3.1",
    "file-naming-enforcer": "^1.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "start-server-and-test": "^1.14.0",
    "testdouble": "^3.16.4",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": "14.17.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "max-lines": [
        "error",
        300
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css}": [
      "prettier --write --"
    ]
  }
}
